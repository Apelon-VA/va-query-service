<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.ihtsdo</groupId>
        <artifactId>ihtsdo-otf-parent</artifactId>
        <version>3</version>
    </parent>
    <groupId>org.ihtsdo.otf</groupId>
    <artifactId>query-parent</artifactId>
    <version>1.1-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>${branch}: (MMP) Query service parent</name>
    <description>Parent project of modules that support query services.</description>
    <developers>
        <developer>
            <id>rda</id>
            <name>Rory Davidson</name>
            <organization>IHTSDO</organization>
            <organizationUrl>http://www.ihtsdo.org</organizationUrl>
            <roles>
                <role>Architect</role>
                <role>Technical Product Manager</role>
            </roles>
            <timezone>Europe/London</timezone>
        </developer>
        <developer>
            <id>kec</id>
            <name>Keith Campbell</name>
            <organization>Informatics, Inc.</organization>
            <organizationUrl>http://www.informatics.com</organizationUrl>
            <roles>
                <role>Developer</role>
                <role>Architect</role>
            </roles>
            <timezone>America/Los_Angeles</timezone>
        </developer>
        <developer>
            <id>aimeefurber</id>
            <name>Aimee Furber</name>
            <organization>Informatics, Inc.</organization>
            <organizationUrl>http://www.informatics.com</organizationUrl>
            <roles>
                <role>Developer</role>
            </roles>
            <timezone>America/Los_Angeles</timezone>
        </developer>
        <developer>
            <id>dylangrald</id>
            <name>Dylan Grald</name>
            <organization>Informatics, Inc.</organization>
            <organizationUrl>http://www.informatics.com</organizationUrl>
            <roles>
                <role>Developer</role>
            </roles>
            <timezone>America/Los_Angeles</timezone>
        </developer>     
    </developers>
    <contributors>
        <contributor>
            <name>Susan Castillo</name>
            <organization>Informatics, Inc.</organization>
            <organizationUrl>http://www.informatics.com</organizationUrl>
            <roles>
                <role>Project Manager</role>
            </roles>
            <timezone>America/Los_Angeles</timezone>
        </contributor>
    </contributors>
    <scm>
        <connection>scm:git:https://github.com/IHTSDO/OTF-Query-Services.git</connection>
        <developerConnection>scm:git:git@github.com:IHTSDO/OTF-Query-Services.git</developerConnection>
        <url>https://github.com/IHTSDO/OTF-Query-Services</url>
        <tag>sprint2</tag>
    </scm>
    <distributionManagement>
        <site>
            <id>site</id>
            <url>scm:git:git@github.com:IHTSDO/OTF-Query-Services.git</url>
        </site>
    </distributionManagement>
    <properties>
        <branch>QS ${project.scm.tag}</branch>
        <endorsed.dir>${project.build.directory}/endorsed</endorsed.dir>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <jersey-version>2.2</jersey-version>
        <junit.version>4.11</junit.version>
        <terminology-component-chronicle.version>1.1-SNAPSHOT</terminology-component-chronicle.version>
        <org.apache.lucene.version>4.3.1</org.apache.lucene.version>
        <hk2.version>2.2.0-b14</hk2.version>
        <maven-plugin-plugin.version>2.6</maven-plugin-plugin.version>
        <sonar.core.codeCoveragePlugin>jacoco</sonar.core.codeCoveragePlugin>
        <sonar.jacoco.itReportPath>${project.basedir}/../target/jacoco-it.exec</sonar.jacoco.itReportPath>
    </properties>
    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>junit</groupId>
                <artifactId>junit</artifactId>
                <scope>test</scope>
                <version>${junit.version}</version>
            </dependency>
            <dependency>
                <groupId>net.sf.docbook</groupId>
                <artifactId>docbook-xml</artifactId>
                <version>5.0-all</version>
                <classifier>resources</classifier>
                <type>zip</type>
                <scope>runtime</scope>
            </dependency>
            <dependency>
                <groupId>org.glassfish.hk2</groupId>
                <artifactId>hk2</artifactId>
                <version>${hk2.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>
    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>com.agilejava.docbkx</groupId>
                    <artifactId>docbkx-maven-plugin</artifactId>
                    <version>2.0.14</version>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-plugin-plugin</artifactId>
                    <version>${maven-plugin-plugin.version}</version>
                </plugin>
            </plugins>
        </pluginManagement>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.1</version>
                <configuration>
                    <source>1.7</source>
                    <target>1.7</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <executions>
                    <execution>
                        <id>attach-docbook</id>
                        <configuration>
                            <descriptors>
                                <descriptor>src/main/assembly/docbook.xml</descriptor>
                            </descriptors>
                        </configuration>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <phase>package</phase>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>com.maestrodev</groupId>
                <artifactId>zip-bundle-maven-plugin</artifactId>
                <version>1.0</version>
                <extensions>true</extensions>
            </plugin>
            <plugin>
                <groupId>org.glassfish.hk2</groupId>
                <artifactId>hk2-inhabitant-generator</artifactId>
                <version>${hk2.version}</version>
            </plugin>
            <plugin>
                <groupId>org.jacoco</groupId>
                <artifactId>jacoco-maven-plugin</artifactId>
                <version>0.6.3.201306030806</version> 
                <executions>
                    <execution>
                        <id>agent</id>
                        <goals>
                            <goal>prepare-agent</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>   
                    <destFile>${project.basedir}/../target/jacoco-it.exec</destFile>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <modules>
        <module>query-client</module>
        <module>query-jaxb-objects</module>
    </modules>
    <profiles>
        <profile>
            <id>all</id>
            <modules>
                <module>query-service</module>
                <module>query-implementation</module>
                <module>query-integration-tests</module>
                <module>query-documentation</module>
                <module>query-lucene</module>
            </modules>
        </profile>
        <profile>
            <id>query-service</id>
            <modules>
                <module>query-service</module>
                <module>query-implementation</module>
                <module>query-lucene</module>
            </modules>
        </profile>
        <profile>
            <id>integration-tests</id>
            <modules>
                <module>query-integration-tests</module>
            </modules>
        </profile>
        <profile>
            <id>documentation</id>
            <modules>
                <module>query-integration-tests</module>
                <module>query-documentation</module>
            </modules>
        </profile>
    </profiles>
    <reporting>
        <excludeDefaults>true</excludeDefaults>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-project-info-reports-plugin</artifactId>
                <version>${maven-project-info-reports-plugin.version}</version>
                <reportSets>
                    <reportSet>
                        <reports>
                            <report>index</report>
                            <report>license</report>
                            <report>dependencies</report>
                            <report>dependency-convergence</report>
                            <report>plugin-management</report>
                            <report>scm</report>
                            <report>summary</report>
                            <!-- Not currently useful with POM metadata
                                                        <report>project-team</report>
                                                        <report>mailing-list</report>
                                                        <report>cim</report>
                                                        <report>issue-tracking</report>
                            -->
                        </reports>
                    </reportSet>
                </reportSets>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <inherited>false</inherited>
                <reportSets>
                    <reportSet>
                        <reports>
                            <report>aggregate</report>
                        </reports>
                    </reportSet>
                </reportSets>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jxr-plugin</artifactId>
                <inherited>false</inherited>
                <reportSets>
                    <reportSet>
                        <reports>
                            <report>aggregate</report>
                        </reports>
                    </reportSet>
                </reportSets>
            </plugin>
        </plugins>
    </reporting>
</project>
